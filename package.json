{
  "name": "yt-music",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "description": "Aplicativo desktop de m√∫sica inspirado no YouTube Music",
  "homepage": "https://github.com/harisoncleytondev/yt-music",
  "author": {
    "name": "Harison Cleyton",
    "email": "harison@ytmusic.app"
  },
  "license": "ISC",
  "keywords": [
    "music",
    "youtube",
    "electron",
    "player"
  ],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.harison.ytmusic",
    "productName": "YouTube Minerando",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "maintainer": "YouTube modificado"
    }
  },
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0"
  }
}
